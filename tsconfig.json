{
	"compilerOptions": {
		"target": "ES6",
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"paths": {
			"*": ["node_modules/*"],
			"@/*": ["src/*"],
			"renderer/*": ["src/renderer/*"]
		}
	},
	"include": ["src/**/*"]
}
